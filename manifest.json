{
  "manifest_version": 2,
  "name": "XPath Identifier",
  "author": "Mitanshu",
  "description": "Identify and save xpaths of clicked elements",
  "version": "1.0.0",
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.oracledemos.com/*",
        "https://*.oraclepdemos.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://fa-eudr-dev4-saasfademo1.ds-fa.oraclepdemos.com/*"
  ]
}
